<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/workout"
            android:transitionName="profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/girl_workout" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:transitionName="date"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/clock"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corners"
            android:padding="7dp"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:text="12:00PM - 1:00PM" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignTop="@+id/workout"
            android:textAlignment="textStart"
            android:alpha="0.3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corners3"
            android:padding="7dp"
            android:textColor="@color/colorAccent"
            android:gravity="end"
            android:text="Sessions :\n> Abs \n> Shoulders \n> Upper Arm " />

        <TextView
            android:id="@+id/label3"
            android:layout_width="102dp"
            android:transitionName="time"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label1"
            android:drawableLeft="@drawable/calendar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corners1"
            android:padding="7dp"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:text="Mon - Wed" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapLayout"
        android:alpha="0.3"
        android:background="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:alpha="0.5"
        android:background="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:visibility="gone"
            android:background="@android:color/holo_blue_bright"
            android:padding="7dp"
            android:id="@+id/img_button"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/message"
            android:background="@drawable/round_corners1"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/title_home" />
        <TextView
            android:id="@+id/req_ses"
            android:layout_toRightOf="@+id/message"
            android:background="@drawable/round_corners2"
            android:textAlignment="center"
            android:padding="5dp"
            android:drawableLeft="@drawable/stopwatch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="Request Session" />

        <ImageButton
            android:padding="7dp"
            android:id="@+id/img_button1"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/img_button"
            android:src="@drawable/thumbsup"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>